<div class="h-100 green-bg">
  <div class="container pt-5 pl-3">
    <%= link_to "< Back", :back, style:"color:#FFFFFF" %>
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-4 shadow">
          <h3 class="pb-2">Edit your booking with <%= @booking.pigeon.name %></h3>
          <%= simple_form_for @booking do |f| %>
            <%= f.input :start_date, as: :date, html5: true, placeholder: @booking.start_date %>
            <%= f.input :end_date, as: :date, html5: true, placeholder: @booking.end_date %>
            <%= f.input :address, placeholder: @booking.address%>
            <%= f.input :request, placeholder: @booking.request%>
            <%= f.submit class: 'btn btn-flat' %>
          <% end %>
          <p><%= link_to "Cancel booking", booking_path(@booking), style:"color:black", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
        </div>
      </div>
    </div>
  </div>
</div>
